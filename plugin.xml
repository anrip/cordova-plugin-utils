<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-statusbar-height"
    version="1.1.0">

    <name>StatusBarHeight</name>
    <description>Cordova StatusBar Height Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,statusbar,height</keywords>

    <engines>
        <engine name="cordova" version=">=5.0.0" />
    </engines>

    <js-module src="www/StatusBarHeight.js" name="StatusBarHeight">
        <clobbers target="window.StatusBarHeight" />
    </js-module>

    <platform name="android">
        <source-file src="src/android/StatusBarHeight.java" target-dir="src/com/anrip/cordova" />

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="StatusBarHeight">
                <param name="android-package" value="com.anrip.cordova.StatusBarHeight" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
    </platform>

</plugin>
